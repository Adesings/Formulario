<!--
asocio a esta vista con un modelo especificon de alumno
    Es decir se asocia con un objeto alumno
    Para ello es necesaroo que el return view( envie un objeto)
    //el objeto enviado debe ser del moismo tipo que el objeto bindeado
    //en la vista

-->
@model Formulario.Models.Alumno

<div class="row">
    <h1> Formulario Ingreso Alumnos</h1>
    <!--
    using incpora funcionalidad c# directamnte en el codigo ghtml
        Html en realidad es un render de vista, el cual de forma asistida
        Genera html que se bindea con los modelos u objetos de los controladores
        Html.BeginForm( => crear un <form>
                    "Contact", => el action del envi de formulario llaamra al metodo Contact del controlador
                     "Home",    => a que contraldor estara escuchando el evento
                     FormMethod.Post, => el tipo de metodo que se enviar { <form action="Home/Contact" method="POST">}
                    new { (arroba)class = "form-horizontal" }=> añade propuiuedades a la etiqueta <form action="Home/Contact" method="POST" class="form-horizontal">
                )
    -->
   @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
   {
        <div class="form-group">
            <label class="control-label col-sm-2" for="rut">Rut:</label>
            <div class="col-sm-6">
                <!--
                 (arroba)Html permite crear eriquetas html
                    TextBoxFor, creara un input type text el cual estará
                    bindeado con el rut (en este caso), del modelo
                
                  -->
                @Html.TextBoxFor(m => m.rut, null, new { @class = "form-control", @placeholder = "Ingrese su rut" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="nombre">Nombre:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.nombre, null, new { @class = "form-control", @placeholder = "Ingrese su nombre" })
            </div>
        </div> 
        <div class="form-group">
            <label class="control-label col-sm-2" for="apellido">Apellido:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor( m=>m.apellido ,  null, new { @class = "form-control", @placeholder = "Ingrese su apellido" })          
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="sexo">Sexo:</label>
            <div class="col-sm-6">
                @Html.RadioButtonFor(m=>m.sexo, "Hombre", new { @class = "radio" })
                @Html.RadioButtonFor(m => m.sexo, "Mujer", new { @class = "radio" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="fono">Fono:</label>
            <div class="col-sm-6">
             @Html.TextBoxFor(m => m.fono, null, new { @class = "form-control", @placeholder = "Ingrese su telefono" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="ciudad">Ciudad:</label>
            <div class="col-sm-6">
                @Html.DropDownListFor(m=>m.ciudad, new List<SelectListItem>
                    {
                        new SelectListItem{Text="Osorno", Value="Osorno"},
                        new SelectListItem{Text="Paillaco", Value="Paillaco"},
                        new SelectListItem{Text="Valdivia", Value="Valdivia"},
                        new SelectListItem{Text="Los Lagos", Value="Los Lagos"},
                        new SelectListItem{Text="San Juan de la Costa", Value="San Juan de la Costa"},
                        new SelectListItem{Text="Puerto Octay", Value="Puerto Octay"},
                    }, 
                    new { @class="form-control"}
                    )
                 
            </div>
        </div> 
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-1">
                <button type="reset" class="btn btn-info">Limpiar</button>
            </div>
            <div class="col-sm-offset-1 col-sm-1">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>
