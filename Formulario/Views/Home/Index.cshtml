
<div class="row">
    <h1> Formulario Ingreso Alumnos</h1>
   @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
   {
        <div class="form-group">
            <label class="control-label col-sm-2" for="rut">Rut:</label>
            <div class="col-sm-6">
                @Html.TextBox("rut", null, new { @class ="form-control", @placeholder ="Ingrese su rut"})
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="nombre">Nombre:</label>
            <div class="col-sm-6">
                @Html.TextBox("nombre", null, new { @class = "form-control", @placeholder = "Ingrese su nombre" })
            </div>
        </div> 
        <div class="form-group">
            <label class="control-label col-sm-2" for="apellido">Apellido:</label>
            <div class="col-sm-6">
                @Html.TextBox("apellido", null, new { @class = "form-control", @placeholder = "Ingrese su apellido" })          
            </div>
        </div> 
        <div class="form-group">
            <label class="control-label col-sm-2" for="ciudad">Ciudad:</label>
            <div class="col-sm-6">
                @Html.DropDownList("ciudad", new List<SelectListItem>
                    {
                        new SelectListItem{Text="Osorno", Value="Osorno"},
                        new SelectListItem{Text="Paillaco", Value="Paillaco"},
                        new SelectListItem{Text="Valdivia", Value="Valdivia"},
                        new SelectListItem{Text="Los Lagos", Value="Los Lagos"},
                        new SelectListItem{Text="San Juan de la Costa", Value="San Juan de la Costa"},
                        new SelectListItem{Text="Puerto Octay", Value="Puerto Octay"},
                    },
                    "Osorno",
                    new { @class="form-control"}
                    )
                 
            </div>
        </div> 
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-1">
                <button type="reset" class="btn btn-info">Limpiar</button>
            </div>
            <div class="col-sm-offset-1 col-sm-1">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }
</div>
